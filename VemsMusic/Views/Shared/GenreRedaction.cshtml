@model Genre

    <form action ="~/DBRedaction/RedactGenres/@Model.Id" method="post" class="form-horizontal">

        <div class="form-group mt-2 mb-2 mx-2">
            <label asp-for="Name"></label>
            <div class="col-12">
                <input asp-for="Name" class="input-form form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group mb-2 mx-2">
            <label asp-for="Description"></label>
            <div class="col-12">
                <input asp-for="Description" class="input-form form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group mb-2 mx-2">
            <label asp-for="PicturePath"></label>
            <div class="col-12">
                <input asp-for="PicturePath" class="input-form form-control"/>
                <span asp-validation-for="PicturePath" class="text-danger"></span>
            </div>
        </div>

        <input class="btn btn-success col-12" type="submit" value="Завершить редактирование" />
    </form>