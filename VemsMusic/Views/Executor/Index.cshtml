@model GroupWithMusicsViewModel

<div class="container">
    <div class="row">

        <h2>@Model.GetMusicalGroup.Name</h2>

        @foreach (Music item in Model.GetAllMusic)
        {
            <div class="music-item col-xl-3 col-md-6 col-sm-12">

                <img class="img-thumbnail mb-3 mt-3" src="@item.ImagePath" alt="@item.Name" />

                <audio src="@item.AudioPath"></audio>

                <h5 class="text-center">@item.Name</h5>

                <p class="text-center">@item.Text</p>
            </div>
        }

    </div>
</div>