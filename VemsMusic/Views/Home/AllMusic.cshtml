@model MusicViewModel

<div class="container">
    <div class="row">

        <h2 class="text-center mt-3 mb-3">Музыка</h2>

        <!-- !!! Сделать так, чтоб играл только один трек --> <!-- !!! Если название длинное, после опред. кол-ва символов должно идти "..." -->

        <!-- !!! Расставить col под xl, md, sm. -->
        <!-- !!! Меньше шрифт, отступы, бордеры и прочее -->
        <div class="container">
            <div class="row align-items-center mb-5">
                <div class="col-12">

                    @foreach (Music item in Model.AllMusic)
                    {
                        <div class="container">
                            <div class="row music-item mt-2 mb-3">

                                <div class="col-1">
                                    <img class="music-img" src="@item.ImagePath" alt="@item.Name" />
                                </div>

                                <div class="music-name col-5">@item.Name</div>

                                <div class="music-group col-5">@item.Group.Name</div>

                                <div class="music-prop col-1">
                                    <!-- <p class="col-3">@item.Text</p> !!! Выпадающая кнопка с текстом -->
                                    <a href="~/AddMusicToUser/@item.Id">Сохранить</a>
                                </div>
                            </div>
                        </div>

                        <div class="music-borderline"></div> <!-- !!! Border делает слишком большую линию, сделать отдельно, аккуратно. Мб вставить внутрь контейнера -->

                        <audio class="mt-2" src="@item.AudioPath" controls></audio> <!-- !!! Тоже выпадашка при нажатии на картинку (затемняется, появляется кнопка), название -->
                    }

                </div>
            </div>
        </div>

    </div>
</div>